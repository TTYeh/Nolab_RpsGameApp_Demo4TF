<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:myNamespace="http://schemas.microsoft.com/winfx/2009/xaml"
             myNamespace:Class="Ispan_XAMLUI_MauiApp.MainPage">

    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
        <Label
                Text="得分"
                FontSize="32"
                HorizontalOptions="Center" />
        <StackLayout
                Orientation="Horizontal"
                HorizontalOptions="Center">
            <Button
                    Text="剪刀mainPage"
                    Clicked="Scissors_clicked"
                    HorizontalOptions="Center" />
            <Button
                    Text="石頭"
                    Clicked="Rock_clicked"
                    HorizontalOptions="Center" />
            <Button
                    Text="布"
                    Clicked="Paper_clicked"
                    HorizontalOptions="Center" />
        </StackLayout>
        <Label
                Text="你贏了"
                FontSize="32"
                HorizontalOptions="Center" />
        <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
